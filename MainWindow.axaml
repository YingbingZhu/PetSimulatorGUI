<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PetSimulatorGUI.MainWindow"
        xmlns:vm="clr-namespace:PetSimulatorGUI.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        Title="PetSimulatorGUI">
    <StackPanel Margin="20">
        <TextBlock Text="🐶 Your Pet" FontSize="20" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Status}" Margin="0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Feed" Click="OnFeedClick"/>
            <Button Content="Play" Click="OnPlayClick"/>
            <Button Content="Sleep" Click="OnSleepClick"/>
        </StackPanel>
    </StackPanel>
</Window>
